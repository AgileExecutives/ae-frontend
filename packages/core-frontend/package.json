{
  "name": "@agile-exec/core-frontend",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "./dist/unburdy-base-app.cjs.js",
  "module": "./dist/unburdy-base-app.es.js",
  "types": "./dist/types/index.d.ts",
  "style": "./dist/unburdy-base-app.css",
  "exports": {
    ".": {
      "import": "./dist/unburdy-base-app.es.js",
      "require": "./dist/unburdy-base-app.cjs.js"
    },
    "./style.css": "./src/style.css",
    "./lib/utils": "./src/lib/utils.ts",
    "./components": "./src/components/index.ts",
    "./components/*": "./src/components/*",
    "./components/ui/*": "./src/components/ui/*",
    "./components/base-app/*": "./src/components/base-app/*",
    "./config": "./src/config/app-config.ts",
    "./config/*": "./src/config/*",
    "./composables": "./src/composables/index.ts",
    "./composables/*": "./src/composables/*",
    "./views/*": "./src/views/*",
    "./stores/*": "./src/stores/*",
    "./router": "./src/router/index.ts",
    "./router/*": "./src/router/*"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm-run-all --parallel type-check build-only",
    "build-watch": "vite build --watch",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "debug:e2e": "playwright test --debug",
    "report:e2e": "playwright show-report",
    "build-only": "vite build",
    "build-types": "tsc -p tsconfig.build.json",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@agile-exec/api-client": "file:../api-client",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^13.9.0",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "daisyui": "^5.3.9",
    "lucide-vue-next": "^0.545.0",
    "pinia": "^3.0.3",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.22",
    "vue-i18n": "11",
    "vue-router": "^4.5.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@iconify-json/radix-icons": "^1.2.5",
    "@iconify/vue": "^5.0.0",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/vite": "^4.1.14",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.7.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.33.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-vue": "~10.4.0",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.0"
  }
